{
  "extends": "../../.eslintrc.json",
  "ignorePatterns": [
    "!**/*",
    "cypress/**/*"
  ],
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": [
          "projects/ngx-timeline/tsconfig.(lib|spec).json"
        ]
      }
    }
  },
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "parserOptions": {
        "project": [
          "projects/ngx-timeline/tsconfig.(lib|spec).json"
        ]
      },
      "rules": {
        "@angular-eslint/prefer-standalone": "warn",
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": "attribute",
            "prefix": "ngx",
            "style": "camelCase"
          }
        ],
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": "ngx",
            "style": "kebab-case"
          }
        ]
      }
    }
  ]
}
